<% include ../../partials/headerDoctype %>
<% include ../../partials/headerNavbar %>

<script type="text/javascript">
    $("#managementAddress").addClass("active");
    $("#management").css("color", "#fff");
</script>

<h1 class="ui center aligned block inverted olive header">Add New Address</h1>
    
<form class="ui form" action="/management/address" method="POST">
    <h2 class="ui header">Address :</h2>
    <div class="field">
        <label>Name</label>
        <input type="text" name="address[name]" placeholder="Name" required>
    </div>
    
    <div class="field">
        <label>Address 1</label>
        <input type="text" name="address[address1]" placeholder="Address 1" required>
    </div>
    
    <div class="field">
        <label>Address 2</label>
        <input type="text" name="address[address2]" placeholder="Address 2">
    </div>
    
    <div class="field">
        <label>Postal Code1</label>
        <input type="text" name="address[postalCode]" placeholder="Postal Code" required>
    </div>
    
    <div class="field">
        <label>City</label>
        <input type="text" name="address[city]" placeholder="City" required>
    </div>
    
    <h2 class="ui header">Time :</h2>
    <div class="field">
        <label>Hour</label>
        <input type="number" name="address[time][hour]" placeholder="Hour" min="0" max ="24" step="1" required>
    </div>
    
    <div class="field">
        <label>Minute</label>
        <input type="number" name="address[time][minute]" placeholder="Minute" min="0" max ="60" step="1" required>
    </div>
    
    <a class="ui left floated animated inverted violet button" href="/management/address">
        <div class="visible content">
            Go back
        </div>
        <div class="hidden content">
            <i class="left arrow large icon"></i>
        </div>
    </a>
    <input class="ui inverted green button" type="submit" value="Submit !">
</form>

<% include ../../partials/footer %>